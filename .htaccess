Options +FollowSymLinks
RewriteEngine On

#index
RewriteRule ^inicio$ index.php

#bystudent
RewriteRule ^vista/estudiante/([0-9]+)$ bystudent.php?std=$1
RewriteRule ^vista/estudiante$ bystudent.php

#bycourse
RewriteRule ^vista/curso$ bycourse.php

#byschool
RewriteRule ^vista/escuela$ byschool.php

#ranks
RewriteRule ^rangos$ rangevalues.php

#area
RewriteRule ^areas$ area.php

#admision process
RewriteRule ^admision$ admission.php

#byschool
RewriteRule ^cursos$ cursos.php

#users
RewriteRule ^usuarios$ UserView.php

#login
RewriteRule ^login$ login.php

#profile
RewriteRule ^perfil$ profile.php

#reports
RewriteRule ^reporte/estudiante$ app/reports/student.php
RewriteRule ^reporte/curso$ app/reports/course.php
RewriteRule ^reporte/escuela$ app/reports/school.php

#Error 404
RewriteRule ^error$ 404.php
ErrorDocument 404 http://localhost/nivelation/error